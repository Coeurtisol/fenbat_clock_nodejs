// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Entity {
  id    Int    @id @default(autoincrement())
  name  String
  Users User[]
  Affaires Affaire[]
}

model Affaire {
  id Int @id @default(autoincrement())
  secteur String
  type String
  etat String
  entity Entity @relation(fields: [entityId],references:[id])
  entityId Int
}

model Role {
  id   Int    @id @default(autoincrement())
  name String
  users User[]
}

model User {
  id         Int        @id @default(autoincrement())
  firstname  String
  lastname   String
  accessCode String
  pointages  Pointage[]
  Orders     Order[]
  entity     Entity     @relation(fields: [entityId], references: [id])
  entityId   Int
  role Role @relation(fields: [roleId],references:[id])
  roleId     Int
}

model Pointage {
  id     Int   @id @default(autoincrement())
  hour   Float
  user   User  @relation(fields: [userId], references: [id])
  userId Int
}

model Absence {
  id Int @id @default(autoincrement())
  name String
}

// A VOIR PLUS TARD
model Order {
  id        Int     @id @default(autoincrement())
  quantity  Int
  done      Boolean
  article   Article @relation(fields: [articleId], references: [id])
  articleId Int
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}

model Article {
  id         Int      @id @default(autoincrement())
  name       String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  Orders     Order[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  articles Article[]
}

model Site {
  id   Int    @id @default(autoincrement())
  name String
}
